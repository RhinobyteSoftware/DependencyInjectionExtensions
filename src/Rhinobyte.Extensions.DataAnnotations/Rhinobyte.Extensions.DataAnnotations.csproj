<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFrameworks>netstandard2.0</TargetFrameworks>
        <IsPackable>true</IsPackable>
        
        <!-- VERSION VALUES -->
        <AssemblyVersion>$(DataAnnotationsPackageVersion).0</AssemblyVersion>
        <FileVersion>$(DataAnnotationsPackageVersion).0</FileVersion>
        <InformationalVersion>$(DataAnnotationsPackageVersion)</InformationalVersion>
        <PackageVersion>$(DataAnnotationsPackageVersion)</PackageVersion>
        <Version>$(DataAnnotationsPackageVersion)</Version>

        <PackageId>Rhinobyte.Extensions.DataAnnotations</PackageId>
        <AssemblyName>$(PackageId)</AssemblyName>
        <RootNamespace>$(PackageId)</RootNamespace>
        <Title>$(PackageId)</Title>
        <PackageTags>dataannotations validation</PackageTags>
        
        <Summary>Provides DataAnnotation extensions for improved validation</Summary>
        <Description>$(Summary)</Description>
    </PropertyGroup>
    
    <ItemGroup>
        <PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.0.0" PrivateAssets="All" />
        <PackageReference Include="System.ComponentModel.Annotations" Version="4.4.1" />
    </ItemGroup>

</Project>
